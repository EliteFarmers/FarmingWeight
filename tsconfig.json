{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowJs": false,

		"target": "ESNext",
		"moduleDetection": "force",
		"moduleResolution": "Node",
		"module": "CommonJS",
		// "module": "ESNext", // For easier local development
		
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,

		"lib": [ "ES2022" ]
	},
	"include": [ "src" ],
	"exclude": [ "node_modules" ]
  }