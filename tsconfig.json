{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowJs": false,

		"target": "ES2022",
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		// "module": "ESNext", // For easier local development

		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,

		"strict": true,
		"noUncheckedIndexedAccess": true,
		"verbatimModuleSyntax": true,

		"lib": ["ES2022"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
